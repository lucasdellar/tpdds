{{# partial "titulo" }}	
<title>D&oacutende Invierto</title>
<link rel="icon" href="../logo.png">
<script src="../validarDatosCuenta.js"></script>
{{/partial}}

{{# partial "contenido" }}
<div class="alert alert-danger" role="alert">
	<h4 class="alert-heading">Ups!</h4>
	<p>Ya existe una cuenta con ese nombre en ese per&iacuteodo.</p>
	<hr>
	<p class="mb-0">Quer&eacutes volver a intentarlo?</p>
	<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
		Agregar Cuenta
	</button>

	<a class="btn btn-primary" href="/empresas/{{empresa}}" role="button">Volver atr&aacutes</a>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Agregar Cuenta</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/empresas/{{empresa}}" id="needs-validation" method="POST" onSubmit="return validarDatos();" novalidate>
         <label>Empresa: </label>
         <input type="text" readonly class="form-control" id="nombreEmpresa" name="nombreEmpresa" value="{{empresa}}" required>
         <label>Nombre de la cuenta: </label>
         <input type="text" class="form-control" id="nombreCuenta" name="nombreCuenta" aria-describedby="emailHelp" placeholder="Ejemplo: ROE" pattern="[a-zA-Z0-9\s]+" required>
         <small id="emailHelp" class="form-text text-muted">Recuerde que no puede haber dos cuentas con el mismo nombre en el mismo periodo..</small>
          <p id="feedback1"></p>
        <label for="exampleInputEmail1">Periodo: </label>
        <input type="text" class="form-control" id="periodoCuenta" name="periodoCuenta" aria-describedby="emailHelp" placeholder="Ejemplo: 2017" pattern="\d*" required>
         <p id="feedback2"></p>
        <label for="exampleInputEmail1">Valor: </label>
        <input type="text" class="form-control" id="valorCuenta" name="valorCuenta" aria-describedby="emailHelp" placeholder="Ejemplo: 1000000" pattern="\d*" required>
         <p id="feedback3"></p>
        <button type="submit" style="float: right" class="btn btn-danger">Aceptar</button>
      </div>
    </form>
  </div>
</div>
</div>
</div>

{{/partial}}

{{> layout.hbs }}